[{"count": 0, "tags": [], "bug_id": 43309, "text": "Currently, programs which wish to send vectors via sockets in APR must use \nconnected stream sockets (either writev or socket_send).  However, non-\nconnected UDP sockets cannot use these options.  The proposed solution is to \nadd a apr_socket_sendtov function which uses the apr_socket_sendto function \ninstead of send", "id": 107736, "time": "2007-09-05T02:19:36Z", "creator": "margol@beamartyr.net", "creation_time": "2007-09-05T02:19:36Z", "is_private": false, "attachment_id": null}, {"count": 1, "tags": [], "bug_id": 43309, "text": "Created attachment 20773\npatch (unix-only) to provide apr_sock_sendtov", "id": 107737, "time": "2007-09-05T02:30:59Z", "creator": "margol@beamartyr.net", "creation_time": "2007-09-05T02:30:59Z", "is_private": false, "attachment_id": 20773}, {"count": 2, "tags": [], "bug_id": 43309, "text": "Created attachment 20783\npatch for win32", "id": 107892, "time": "2007-09-09T00:36:20Z", "creator": "margol@beamartyr.net", "creation_time": "2007-09-09T00:36:20Z", "is_private": false, "attachment_id": 20783}, {"count": 3, "tags": [], "creator": "margol@beamartyr.net", "text": "Created attachment 20784\npatch for win32", "id": 107894, "attachment_id": 20784, "bug_id": 43309, "creation_time": "2007-09-09T00:45:25Z", "time": "2007-09-09T00:45:25Z", "is_private": false}, {"count": 4, "tags": [], "text": "Created attachment 20785\npatch for beos", "attachment_id": 20785, "id": 107895, "creator": "margol@beamartyr.net", "time": "2007-09-09T00:45:44Z", "bug_id": 43309, "creation_time": "2007-09-09T00:45:44Z", "is_private": false}]